@model FootballStore.DataAccess.ViewModels.OrderVM

@{
    ViewData["Title"] = "Index";
}

<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-primary">Мои заказы</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-action="Index" asp-controller="Home"><i class="bi bi-plus-circle"></i>&nbsp;На главную</a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Дата заказа</th>
            <th>Сумма</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.orders)
        {
            <tr>
                <td>@item.DateOfOrder</td>
                <td>@item.Total</td>
            </tr>
        }
    </tbody>
</table>