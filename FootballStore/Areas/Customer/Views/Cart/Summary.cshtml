@model FootballStore.DataAccess.ViewModels.CartVM

<form method="post">
    <div class="row">
        <div class="col-md-8 mb-4">
            <div class="card mb-4">
                <div class="card-header py-3">
                    <h5 class="mb-0">Детали заказа</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col">
                            <div class="form-outline">
                                <input type="text" asp-for="@Model.Order.Phone" class="form-control"/>
                                <label class="form-label" for="form7Example6">Телефон</label>
                            </div>
                        </div>
                        <div class="form-outline">
                            <input type="text" asp-for="@Model.Order.City" class="form-control" />
                            <label class="form-label" for="form7Example6">Город</label>
                        </div>
                        <div class="form-outline">
                            <input type="text" asp-for="@Model.Order.Address" class="form-control" />
                            <label class="form-label" for="form7Example6">Адрес</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card mb-4">
            <div class="card-header py-3">
                <h5 class="mb-0">Детали</h5>
            </div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    @foreach(var details in @Model.ListOfCart)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                            <span>@details.Product.Name</span>
                            <span>Кол-во: @details.Count</span>
                            <span>@(((details.Product.Price)*(details.Count)).ToString("c"))</span>
                        </li>
                    }
                    <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                        <div>
                            <strong>ИТОГО</strong>
          
                        </div>
                        <span><strong>@Model.Order.Total.ToString("c")</strong></span>
                    </li>
                </ul>

                <button type="submit" class="btn btn-primary btn-lg btn-block">
                    Оформить заказ
                </button>
            </div>
        </div>
    </div>
</form>
