@model Product
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row bp-3">
            <h2 class="text-primary">Товар</h2>
            <hr />
        </div>
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary=All></div>
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="@Model.ImageUrl" alt="Card image cap">
        </div>
        <div class="row mb-3">
            <label asp-for="Name">Название</label>
            <input disabled asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="row mb-3">
            <label asp-for="Description">Описание</label>
            <input disabled asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="row mb-3">
            <label asp-for="Price">Цена</label>
            <input disabled asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <button class="btn btn-danger" type="submit">Удалить</button>
    </div>
    <a asp-action="Index" asp-controller="Product">Назад</a>
</form>

@section scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}